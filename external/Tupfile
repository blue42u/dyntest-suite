include_rules

include findboost.lua
ifeq (y,$(BUILD_BOOST))
: |> ^o Built Boost^ ./boost.sh |> $(BOOST_FILES) <boost>
endif

include findtbb.lua
ifeq (y,$(BUILD_TBB))
: |> ^o Built TBB^ ./tbb.sh |> $(TBB_FILES) <tbb>
endif

include findxerces.lua
ifeq (y,$(BUILD_XERCES))
: |> ^o Built Xerces^ ./xerces.sh |> $(XERCES_FILES) <xerces>
endif

include finddwarf.lua
ifeq (y,$(BUILD_DWARF))
: |> ^o Built libDwarf^ ./dwarf.sh |> $(DWARF_FILES) <dwarf>
endif

include findbinutils.lua
ifeq (y,$(BUILD_BINUTILS))
: |> ^o Built Binutils^ ./binutils.sh |> $(BINUTILS_FILES) <binutils>
endif

include findzlib.lua
ifeq (y,$(BUILD_ZLIB))
: |> ^o Built Zlib^ ./zlib.sh |> $(ZLIB_FILES) <zlib>
endif

include findlzma.lua
ifeq (y,$(BUILD_LZMA))
: |> ^o Built LZMA^ ./lzma.sh |> $(LZMA_FILES) <lzma>
endif
